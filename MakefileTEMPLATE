#---------------------
# feedback-system Makefile
#
# ---------------------

EXE = DoomsdayTetris2

#Put Rapidjson and libpq include folders here
CXXFLAGS = -I/PostgreSQL/11/include -I/rapidjson/include -Wall -O2

LDFLAGS=-g
#Keep SDL library linking order as it is.
LDLIBS= -lSDL2main -lSDL2 -lSDL2_ttf -lpq

SRC_DIR = src
OBJ_DIR = obj
$(shell if [ ! -d $(OBJ_DIR) ]; then mkdir $(OBJ_DIR); fi)

SRC = $(wildcard $(SRC_DIR)/*.cpp)
OBJ = $(SRC:$(SRC_DIR)/%.cpp=$(OBJ_DIR)/%.o)
$(info $$SRC is [${SRC}])

.PHONY: all clean

all: $(EXE)

$(EXE): $(OBJ)
	$(CXX) $(LDFLAGS) $^ $(LDLIBS) -o $@
$(OBJ_DIR)/%.o: $(SRC_DIR)/%.cpp
	$(CXX) $(CXXFLAGS) $(CFLAGS) -c $< -o $@

clean:
	$(RM) $(OBJ)
